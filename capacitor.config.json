{
  "appId": "com.bahce.stokpanel",
  "appName": "StokPanel",
  "webDir": "www",
  "server": {
    "androidScheme": "https"
  },
  "android": {
    "backgroundColor": "#0a0a0f"
  },
  "ios": {
    "backgroundColor": "#0a0a0f",
    "contentInset": "automatic",
    "allowsLinkPreview": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 1500,
      "launchAutoHide": true,
      "backgroundColor": "#0a0a0f",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "iosSpinnerStyle": "small",
      "spinnerColor": "#ff6b35"
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#0a0a0f"
    }
  }
}
